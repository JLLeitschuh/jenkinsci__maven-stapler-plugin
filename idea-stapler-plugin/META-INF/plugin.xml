<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin>
  <name>Stapler plugin for IntelliJ IDEA</name>
  <description>Stapler plugin for IntelliJ IDEA</description>
  <version>1.0</version>
  <vendor>Kohsuke Kawaguchi</vendor>
  <idea-version since-build="7000"/>

  <extensions defaultExtensionNs="com.intellij">
    <frameworkSupport implementation="org.kohsuke.stapler.idea.StaplerFrameworkSupport"/>
    <!-- it seems like the proper way to do this is by implementing this in application component -->
    <!--inspectionToolProvider implementation="org.kohsuke.stapler.idea.JellyInspector" /-->
   </extensions>
  <!--actions>
    <action id="testGoto" class="org.kohsuke.stapler.idea.test.TestGoToDeclAction" text="testGoto"
            description="emulate go to decl">
      <add-to-group group-id="EditorPopupMenu.GoTo" anchor="after" relative-to-action="GotoDeclaration"/>
    </action>
  </actions-->

  <!-- needed for defining web facet -->
  <depends>com.intellij.javaee</depends>

  <application-components>
      <component>
          <implementation-class>org.kohsuke.stapler.idea.StaplerApplicationComponent</implementation-class>
      </component>
  </application-components>
  <project-components>
      <component>
          <implementation-class>org.kohsuke.stapler.idea.StaplerProjectComponent</implementation-class>
      </component>
  </project-components>
</idea-plugin>